AR = arm-none-eabi-ar
CC = arm-none-eabi-gcc
CXX = arm-none-eabi-c++
LD = arm-none-eabi-ld
OBJDUMP = arm-none-eabi-objdump

CFLAGS = -Wstrict-prototypes \
        -marm \
	-mfloat-abi=softfp \
        -Wall -Wextra -fPIC -mapcs-frame \
       -std=c99

CXXFLAGS = -marm \
	-mfloat-abi=softfp \
        -pedantic -Wall -Wextra -fPIC -mapcs-frame \
	    -fno-rtti \
        -fno-exceptions \
        -std=c++14
        
#CFLAGS +=  -g
CFLAGS +=  -O2
#CXXFLAGS +=  -g
CXXFLAGS +=  -O2

